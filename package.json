{
  "name": "string_decorator",
  "version": "0.1.1",
  "description": "",
  "main": "./dist/js/index.js",
  "scripts": {
    "start": "run-s tsc sass exec",
    "tsc": "tsc",
    "sass": "sass --update ./src/scss:./dist/css --style expanded",
    "exec": "electron .",
    "lint": "run-s lint:format lint:tsc lint:eslint",
    "lint:tsc": "tsc --noEmit",
    "lint:eslint": "eslint --cache --fix src/ts/*.ts",
    "lint:format": "prettier --write ./src/ts/*.{js,ts,json}",
    "watch": "run-p watch:*",
    "watch:sass": "sass --watch src/scss:dist/css --style expanded",
    "watch:build": "tsc -w"
  },
  "keywords": [],
  "author": "Lucky3028",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^14.14.10",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "autoprefixer": "^10.0.4",
    "css-declaration-sorter": "^6.0.2",
    "electron": "^11.0.3",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "7.0.0",
    "fibers": "^5.0.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.1.14",
    "postcss-cli": "^8.3.0",
    "prettier": "2.2.1",
    "sass": "^1.30.0",
    "typescript": "^4.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*.{js,ts,json}": "prettier --write"
  },
  "dependencies": {},
  "browserslist": [
    ">0.25% in JP",
    "not ie <= 10",
    "not op_mini all"
  ],
  "eslintIgnore": [
    "/postcss.config.js"
  ]
}
